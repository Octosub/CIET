<h2>Edit <%= current_user.username %>222</h2>
<%= simple_form_for("changepreferences", html: { class: "centered-form", method: "patch" }) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs ninety-width-input">
    <div class="categories-toggle-container" data-controller="toggle-categories">
      <%= f.input :preferences,
        as: :check_boxes,
        collection_wrapper_tag: 'div',
        collection_wrapper_class: 'category-wrapper',
        item_wrapper_class: 'category-item',
        input_html: {class: 'category-selector'},
        collection: [[image_tag("food_icons/vegan.png").html_safe, "vegan"], [image_tag("food_icons/vegetarian.png"), "vegetarian"], [image_tag("food_icons/pescetarian.png"), "pescetarian"], [image_tag("food_icons/peanut-free.png"), "peanut-free"], [image_tag("food_icons/dairy-free.png"), "dairy-free"]],
        checked: current_user.preferences.split(" ") & ["vegan", "vegetarian", "pescetarian", "peanut-free", "dairy-free"] if !current_user.preferences.nil? %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>
